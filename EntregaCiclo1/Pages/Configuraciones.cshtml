@page
@model EntregaCiclo1.ConfiguracionesModel
@{
    ViewData["Title"] = "Configuraciones";
    Layout = "_LayoutAlternativo";
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/Configuraciones.css" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    .header-custom {
        background-color: #22327b;
        color: white;
        border-radius: 10px 10px 0 0;
        padding: 10px 15px;
    }

    .card-custom {
        border: none;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
    }

    .btn-custom {
        background-color: #22327b;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        cursor: pointer;
    }

    /* Estilos personalizados para las etiquetas de estadísticas */
    .stat-label {
        font-weight: bold;
        color: #22327b; /* Cambia el color según tus preferencias */
    }

    /* Estilos personalizados para los valores de estadísticas */
    .stat-value {
        font-style: italic;
        color: #ff5733; /* Cambia el color según tus preferencias */
    }

    .btn-custom:hover,
    .btn-custom:focus {
        color: #00B6FF !important;
    }

</style>

<!-- Contenedor Principal -->
<div class="container mt-5">

    <!-- Configuraciones Generales -->
    <div class="card card-custom">
        <div class="card-header header-custom">
            Configuraciones Generales
        </div>
        <div class="card-body">
            <!-- Programar mantenimiento -->
            <div class="mb-3">
                <label for="mantenimiento">Programar mantenimiento:</label>
                <input type="date" id="mantenimiento" class="form-control">
            </div>

            <div class="mb-2">
                <label for="precios">Precios de Artículos:</label>
                <input type="number" id="precios" class="form-control" placeholder="Ejemplo: 100">
            </div>

            <div class="mb-2">
                <label for="monedas">Monedas:</label>
                <input type="number" id="monedas" class="form-control" placeholder="Ejemplo: 50">
            </div>

            <div class="mb-2">
                <label for="objetos">Tasa de aparición de objetos (%):</label>
                <input type="number" id="objetos" class="form-control" placeholder="Ejemplo: 10">
            </div>

            <div class="mb-2">
                <label for="enemigos">Tasa de aparición de enemigos (%):</label>
                <input type="number" id="enemigos" class="form-control" placeholder="Ejemplo: 10">
            </div>

            <!-- Botón Guardar -->
            <button class="btn btn-custom mt-4">Guardar Configuraciones</button>
        </div>
    </div>

    <!-- Monetización y Tienda -->
    <div class="card card-custom">
        <div class="card-header header-custom">
            Monetización y Tienda
        </div>
        <div class="card-body">
            <!-- Resto del contenido... -->

            <button class="btn btn-custom mt-2">Añadir Artículo</button>
        </div>
    </div>

</div>

<div>
    <p class="text-center text-danger">Página de demostración: esta página no es funcional</p>
</div>