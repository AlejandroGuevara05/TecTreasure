<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 azulSorteosTec altura_Encabezado_Pie">
            <div class="container">
                <img src="/images/SorteosTecLogo.png" alt="Logo" width="150" />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="margin-left: 20px">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin-left: 20px">
                            <a class="nav-link text-white" asp-area="" asp-page="/SorteosTec">Sorteos Tec</a>
                        </li>
                        <li class="nav-item" style="margin-left: 20px">
                            <a class="nav-link text-white" asp-area="" asp-page="/Videojuego">Videojuego</a>
                        </li>
                        <li class="nav-item" style="margin-left: 20px">
                            <a class="nav-link text-white" asp-area="" asp-page="/Tienda">Tienda Tectreasure</a>
                        </li>
                        <li class="nav-item" style="margin-left: 20px">
                            <a class="nav-link text-white" asp-area="" asp-page="/Lootboxes">Mis Lootboxes</a>
                        </li>
                        <li class="nav-item" style="margin-left: 20px">
                            <a class="nav-link text-white" asp-area="" asp-page="/Ayuda">Ayuda</a>
                        </li>
                        <li class="nav-item" style="margin-left: 20px">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index">Cerrar sesión</a>
                        </li>
                    </ul>
                    <!-- Botón de imagen de carrito de compras -->
                    <a asp-page="/Carrito" class="d-flex justify-content-end" id="carrito-container">
                        <img src="/images/carrito_compra.png" alt="Carrito de Compras" class="carrito-compra" />
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!--
    <footer class="border-top footer text-muted azulSorteosTec altura_Pie">
        <div class="container text-white">
            &copy; 2023 - Plataforma de Administrador TecTreasure
        </div>
    </footer>
    -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
